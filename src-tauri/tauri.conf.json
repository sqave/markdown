{
  "$schema": "https://raw.githubusercontent.com/nicerobot/tauri/dev/packages/cli/schema.json",
  "productName": "CogMD",
  "version": "1.0.2",
  "identifier": "com.cogmd.editor",
  "build": {
    "frontendDist": "../renderer",
    "beforeBuildCommand": "npm run bundle",
    "beforeDevCommand": "npm run bundle"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "fileAssociations": [
      {
        "ext": ["md"],
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["markdown"],
        "mimeType": "text/markdown",
        "role": "Editor"
      }
    ],
    "category": "DeveloperTool"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/sqave/markdown/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRFRDEwNTBCNUJGREIzQ0QKUldUTnMvMWJDd1hSVHM0MWw4RkxKZEN6czI0R2taRlU5S0JzckJDS0xJYXZDNzIzZFpXUjkva3QK"
    }
  }
}
